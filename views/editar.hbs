<div class="bg-light p-5 rounded mt-3">
    <h1>Modificar Cadastro</h1>
    <form action="">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">
                <label for="nome" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Seu Nome Completo">
            </div>
            <div class="col-md-5 mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="nome@provedor.com.br">
            </div>
            <div class="col-md-2">
                <button type="submit" class="mt-4 p-2 w-100 btn btn-warning mb-3">Modificar</button>
            </div>
        </div>
    </form>
</div>