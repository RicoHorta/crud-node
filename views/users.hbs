<div class="bg-light p-5 rounded mt-3">
    <h1>Usuários Cadastrados</h1>
    {{#if table}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
            <tr> {{!-- //Como os dados já ve em formato JSon basta referenciar cada campo da tabela --}}
                <th scope="row">{{id}}</th>
                <td>{{nome}}</td>
                <td>{{email}}</td>
                <td>
                    <div class="row g-1">
                        <div class="col-6 md-4">
                            <a href="editar" class="p-1 w-100 btn btn-info">Editar</a>
                        </div>
                        <div class="col-6 md-4">
                            <a href="#" class="p-1 w-100 btn btn-danger">Excluir</a>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="card mt4">
        <div class="card-body">
            Nenhum cadastro encontrado.
        </div>
    </div>
    {{/if}}
</div>